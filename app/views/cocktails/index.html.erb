


<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(
  <%#= @cocktail.banner_url  %>
);">
  <div class="container">
    <h1>Cocktails</h1>
    <%= link_to "Create New Cocktail", new_cocktail_path, class: "btn btn-primary" %>
  </div>
</div>


  <div class="container my-3">
    <div class="row">
      <div class="col-3">
        <div class="cards">
          <% @cocktails.each do |cocktail| %>
        <div class="card-category" style="background-image: url(<%= image_path("cocktail1.jpg") %>), linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))">
        <div class="card-tags">
        <%#= image_tag("cocktails/cocktail1.jpg", width: '150px') %>
        <%= cocktail.name %>
        <%= link_to 'Make Cocktail', cocktail %>
      </div>
    </div>
    <% end %>
</div>
</div>
</div>
</div>

