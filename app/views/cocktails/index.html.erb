



<div class="container">
  <h1>Cocktails</h1>
  <%#= link_to "Create New Cocktail", new_cocktail_path, class: "btn btn-primary" %>
</div>


<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-4">
        <div class="card-category my-3" style="background-image: url(<%= cocktail.photo.attached? ? (cl_image_path cocktail.photo.key) : (image_path("cocktail1.jpg")) %>), linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))">
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
        </div>
      </div>
    <% end %>
  </div>
</div>

